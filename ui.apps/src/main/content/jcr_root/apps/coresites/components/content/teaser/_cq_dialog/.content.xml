<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Teaser"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <hideTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./hideTitle"
                                                text="Hide Title"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <hideSubtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./hideSubtitle"
                                                text="Hide Subtitle"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <hideText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./hideText"
                                                text="Hide Text"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <hideButtons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./hideButtons"
                                                text="Hide Buttons"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <alignContent
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Align Content"
                                                name="./alignContent">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <Left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="text-left"/>
                                                    <Center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center"
                                                        value="text-center"/>
                                                    <Right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="text-right"/>
                                                </items>
                                            </alignContent>
                                            <alignButtons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Align Buttons"
                                                name="./alignButtons">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <Left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="justify-content-md-start"/>
                                                    <Center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center"
                                                        value="justify-content-center"/>
                                                    <Right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="justify-content-md-end"/>
                                                </items>
                                            </alignButtons>
                                            <buttonSize
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Button Size"
                                                name="./buttonSize">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <Default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value=""/>
                                                    <Large
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large"
                                                        value="btn-lg"/>
                                                    <Small
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small"
                                                        value="btn-sm"/>
                                                </items>
                                            </buttonSize>
                                            <buttons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./buttons">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Button Text"
                                                            name="./text"/>
                                                        <link
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                            fieldLabel="Button Link"
                                                            name="./link"
                                                            rootPath="/content"
                                                            suffix=".html"/>
                                                        <color
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Button Color"
                                                            name="./color">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <Primary
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Primary"
                                                                    value="btn-primary"/>
                                                                <Secondary
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Secondary"
                                                                    value="btn-secondary"/>
                                                                <Success
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Success"
                                                                    value="btn-success"/>
                                                                <Danger
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Danger"
                                                                    value="btn-danger"/>
                                                                <Warning
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Warning"
                                                                    value="btn-warning"/>
                                                                <Info
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Info"
                                                                    value="btn-info"/>
                                                                <Light
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Light"
                                                                    value="btn-light"/>
                                                                <Dark
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Dark"
                                                                    value="btn-dark"/>
                                                            </items>
                                                        </color>
                                                    </items>
                                                </field>
                                            </buttons>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
